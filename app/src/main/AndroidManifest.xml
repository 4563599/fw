<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.hp.hp">

    <!-- 这个权限用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!-- 这个权限用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- 获取运营商信息，用于支持提供运营商信息相关的接口 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <!-- 用于读取手机当前的状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!-- 写入扩展存储，向扩展卡写入数据，用于写入离线定位数据 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- SD卡读取权限，用户写入离线定位数据 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!-- SD卡读取权限，用户写入离线定位数据 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!-- 壁纸设置权限，用户设置妹子壁纸 -->
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>
    <!-- Bugly 需要的权限 -->
    <uses-permission android:name="android.permission.READ_LOGS"/>
    <!-- Bugly 需要的权限 -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>
    <uses-permission android:name="cn.hp.hp.permission.JPUSH_MESSAGE"/>
    <uses-permission android:name="android.permission.RECEIVE_USER_PRESENT"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <!-- Required -->
    <permission
            android:name="cn.hp.hp.permission.JPUSH_MESSAGE"
            android:protectionLevel="signature"/>


    <application
            android:name="cn.hp.hp.App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <meta-data
                android:name="com.baidu.lbsapi.API_KEY"
                android:value="E6rdq6U1vjjmTTglEtdX6fFbYTejWKEq"/>

        <!-- 配置APP渠道号 -->
        <meta-data
                android:name="BUGLY_APP_CHANNEL"
                android:value="Bugly"/>

        <activity
                android:name="cn.hp.hp.ui.MainActivity"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustNothing"></activity>

        <activity
                android:name="cn.hp.hp.ui.bus.LineDetailActivity"
                android:screenOrientation="portrait"/>

        <activity
                android:name="cn.hp.hp.ui.bus.StationDetailActivity"
                android:screenOrientation="portrait"/>

        <service
                android:name="com.baidu.location.f"
                android:enabled="true"/>

        <activity
                android:name="cn.hp.hp.ui.girl.PictureActivity"
                android:label=""
                android:theme="@style/PictureTheme"/>

        <service
                android:name="cn.hp.hp.service.GirlService"
                android:enabled="true"/>

        <activity
                android:name="cn.hp.hp.ui.weather.ShareActivity"
                android:screenOrientation="portrait"/>

        <activity
                android:name="cn.hp.hp.ui.setting.SettingActivity"
                android:label="设置"
                android:screenOrientation="portrait"/>

        <activity
                android:name="cn.hp.hp.ui.setting.AboutActivity"
                android:label="关于"
                android:screenOrientation="portrait"/>

        <activity
                android:name="cn.hp.hp.ui.girl.MzituPictureActivity"
                android:label="图集"
                android:screenOrientation="portrait"/>

        <activity
                android:name="com.thefinestartist.finestwebview.FinestWebViewActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:screenOrientation="portrait"
                android:theme="@style/WebViewTheme"/>

        <activity
                android:name="cn.hp.hp.ui.bus.AllLineActivity"
                android:label="全部线路"
                android:screenOrientation="portrait"/>

        <activity
                android:name="cn.hp.hp.ui.weather.CityManageActivity"
                android:label="城市管理"
                android:screenOrientation="portrait"/>

        <activity
                android:name="cn.hp.hp.ui.weather.CityChooseActivity"
                android:label="城市管理"
                android:screenOrientation="portrait"/>

        <activity
                android:name="cn.hp.hp.ui.setting.ModuleManageActivity"
                android:label="模块管理"
                android:screenOrientation="portrait"/>

        <activity
                android:name="cn.hp.hp.ui.bus.PublicBikeActivity"
                android:label="定位中..."
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustNothing"/>

        <activity android:name="cn.hp.hp.ui.CharT1Activity"></activity>
        <activity android:name="cn.hp.hp.ui.CharH1Activity"></activity>
        <activity android:name="cn.hp.hp.ui.CharPressure1Activity"></activity>
        <activity android:name="cn.hp.hp.ui.CharRainfallActivity"></activity>
        <activity android:name="cn.hp.hp.ui.CharA1Activity"></activity>
        <activity android:name="cn.hp.hp.ui.Char6Activity"></activity>

        <activity android:name="cn.hp.hp.ui.ImagesActivity"></activity>
        <activity
                android:name="cn.hp.hp.ui.SplashActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
                android:name="cn.hp.hp.service.JPushService"
                android:enabled="true"
                android:exported="false"
                android:process=":pushcore">
            <intent-filter>
                <action android:name="cn.jiguang.user.service.action"/>
            </intent-filter>
        </service>


        <receiver
                android:name="cn.hp.hp.receiver.MyReceiver"
                android:enabled="true"
                android:exported="false">
            <intent-filter>
                <action android:name="cn.jpush.android.intent.RECEIVE_MESSAGE"/>
                <category android:name="cn.hp.hp"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>