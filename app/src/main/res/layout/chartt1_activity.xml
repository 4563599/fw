<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="温度数据"
            android:textColor="#FFF"
            android:textSize="20sp" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/chart_consumer_label"
            style="@style/Chart.Label"
            android:text="温度曲线图"
            android:textStyle="bold" />

        <View
            style="@style/Chart.TagDivider"
            android:layout_alignBottom="@id/chart_consumer_label"
            android:layout_toEndOf="@id/chart_consumer_label"
            android:layout_toRightOf="@id/chart_consumer_label" />

        <TextView
            android:id="@+id/chart_consumer_time"
            style="@style/Chart.Save"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10" />

    </RelativeLayout>


    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/rl_title"
        android:visibility="visible" />

    <cn.hp.hp.ui.view.DynamicTitleBar
        android:id="@+id/dynamic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/chart1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp" />


    <RelativeLayout
        android:id="@+id/rl_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dynamic_title">

        <TextView
            android:id="@+id/chart_percentage_label"
            style="@style/Chart.Label"
            android:text="温度数据" />

        <View
            style="@style/Chart.TagDivider"
            android:layout_below="@+id/chart_percentage_label" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_data"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:orientation="vertical">

        <View
            style="@style/Chart.HorizontalDivider"
            android:layout_marginTop="10dp" />

        <LinearLayout style="@style/Chart.ItemLayout">

            <View style="@style/Chart.VerticalDivider" />

            <TextView
                style="@style/Chart.ItemLabel"
                android:text="当前" />

            <View style="@style/Chart.VerticalDivider" />

            <TextView
                style="@style/Chart.ItemLabel"
                android:text="最高" />

            <View style="@style/Chart.VerticalDivider" />

            <TextView
                style="@style/Chart.ItemLabel"
                android:text="最低" />

            <View style="@style/Chart.VerticalDivider" />

            <TextView
                style="@style/Chart.ItemLabel"
                android:text="均值" />

            <View style="@style/Chart.VerticalDivider" />
        </LinearLayout>

        <View style="@style/Chart.HorizontalDivider" />

        <LinearLayout style="@style/Chart.ItemLayout">

            <View style="@style/Chart.VerticalDivider" />

            <TextView
                android:id="@+id/chart_tv_1"
                style="@style/Chart.ItemLabel.Value" />


            <View style="@style/Chart.VerticalDivider" />

            <TextView
                android:id="@+id/chart_tv_2"
                style="@style/Chart.ItemLabel.Value" />


            <View style="@style/Chart.VerticalDivider" />

            <TextView
                android:id="@+id/chart_tv_3"
                style="@style/Chart.ItemLabel.Value" />

            <View style="@style/Chart.VerticalDivider" />

            <TextView
                android:id="@+id/chart_tv_4"
                style="@style/Chart.ItemLabel.Value" />

            <View style="@style/Chart.VerticalDivider" />
        </LinearLayout>

        <View style="@style/Chart.HorizontalDivider" />


        <LinearLayout
            android:id="@+id/ll_bottom_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="滑坡概率       "
                android:textColor="@color/flame"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.moos.library.HorizontalProgressView
                android:id="@+id/progressView_horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                app:end_color="@color/red_end"
                app:end_progress="20"
                app:isTracked="true"
                app:progressTextColor="#696969"
                app:progressTextSize="18sp"
                app:start_color="@color/red_start"
                app:textMovedEnable="true"
                app:trackColor="#f4f4f4"
                app:track_width="50dp" />

        </LinearLayout>

    </LinearLayout>

    <com.mingle.widget.LoadingView
        android:id="@+id/loadView"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:visibility="gone" />
</RelativeLayout>