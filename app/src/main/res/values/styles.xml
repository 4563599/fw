<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LapisBlueTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/lapis_blue</item>
        <item name="colorPrimaryDark">@color/lapis_blue</item>
        <item name="colorAccent">@color/lapis_blue</item>
    </style>

    <style name="PaleDogwoodTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/pale_dogwood</item>
        <item name="colorPrimaryDark">@color/pale_dogwood</item>
        <item name="colorAccent">@color/pale_dogwood</item>
    </style>

    <style name="GreeneryTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/greenery</item>
        <item name="colorPrimaryDark">@color/greenery</item>
        <item name="colorAccent">@color/greenery</item>
    </style>

    <style name="PrimroseYellowTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/primrose_yellow</item>
        <item name="colorPrimaryDark">@color/primrose_yellow</item>
        <item name="colorAccent">@color/primrose_yellow</item>
    </style>

    <style name="FlameTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/flame</item>
        <item name="colorPrimaryDark">@color/flame</item>
        <item name="colorAccent">@color/flame</item>
    </style>

    <style name="IslandParadiseTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/island_paradise</item>
        <item name="colorPrimaryDark">@color/island_paradise</item>
        <item name="colorAccent">@color/island_paradise</item>
    </style>

    <style name="KaleTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/kale</item>
        <item name="colorPrimaryDark">@color/kale</item>
        <item name="colorAccent">@color/kale</item>
    </style>

    <style name="PinkYarrowTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/pink_yarrow</item>
        <item name="colorPrimaryDark">@color/pink_yarrow</item>
        <item name="colorAccent">@color/pink_yarrow</item>
    </style>

    <style name="NiagaraTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/niagara</item>
        <item name="colorPrimaryDark">@color/niagara</item>
        <item name="colorAccent">@color/niagara</item>
    </style>

    <style name="textToolbarTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="textToolbarTitleWeather">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="textToolbarContent">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="textToolbarContentTitle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="textToolbarSuperTitle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="PictureTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="WebViewTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <!--<style name="core_TextAppearance.RobotoThinPath" parent="android:TextAppearance">-->
    <!--<item name="fontPath">fonts/Roboto-Thin.ttf</item>-->
    <!--</style>-->
    <style name="Chart" />

    <style name="Chart.Label">
        <item name="android:layout_width">106dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Chart.TagDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <declare-styleable name="CustomizeTextView">
        <!-- Width of the stroke used to draw the circles. -->
        <attr name="tvstrokeWidth" format="float" />
    </declare-styleable>

    <style name="Chart.Save">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:text">最新数据</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="Chart.ItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="Chart.HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">#B6B6B6</item>
    </style>

    <style name="Chart.VerticalDivider">
        <item name="android:layout_width">0.1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#B6B6B6</item>
    </style>

    <style name="Chart.ItemLabel">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Chart.ItemLabel.Value">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="About" />

</resources>
